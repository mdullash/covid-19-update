<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/bdDetailsLayout"
    tools:context=".activity.BangladeshDetailsActivity">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="6dp">
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/bdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#EAE1E1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bdFlag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bd"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Continent: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Country: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Cases: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Today Cases: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Recovered: "
                                    android:textColor="#C58680"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Death: "
                                    android:textColor="#DF4242"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Today Death: "
                                    android:textColor="#DF4242"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Critical: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Last Updated: "
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/continentTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Asia"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bangladesh"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/totalCasesBdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/todayCasesBdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/totalRecoveredBdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#C58680"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/totalBdDeathTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#DF4242"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/todayBdDeathTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#DF4242"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/criticalBdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/lastUpdatedBdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/webLinkTv"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://corona.gov.bd/"
                    android:textColor="#3853E6"
                    android:textSize="20sp"/>
            </LinearLayout>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.cardview.widget.CardView>



</LinearLayout>