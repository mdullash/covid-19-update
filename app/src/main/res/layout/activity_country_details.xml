<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".activity.CountryDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#EFE6E6"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/scountryFlag"
                android:layout_width="400dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                android:layout_marginBottom="40dp"
                android:src="@mipmap/ic_launcher_round"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Covid-19 World Update: "
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/stotalCasesTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Cases: "
                    android:textColor="#000"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/stotalRecoveredTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Recovered: "
                    android:textColor="#C58680"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/stotalDeathTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Death: "
                    android:textColor="#DF4242"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/scriticalTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Critical: "
                    android:textColor="#000"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>