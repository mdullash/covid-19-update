<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fr_home"
    android:padding="20dp"
    tools:context=".ui.home.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#EAE1E1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="World Update: "
                android:textColor="#000"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/totalCasesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Cases: "
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/totalRecoveredTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Recovered: "
                android:textColor="#C58680"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/totalDeathTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Death: "
                android:textColor="#DF4242"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/criticalTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Critical: "
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/worldCoronaWebTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://www.worldometers.info"
                android:textColor="#673AB7"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:id="@+id/bdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#EAE1E1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangladesh Update: "
                android:textColor="#000"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/totalCasesBdTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Cases: "
                android:textColor="#000"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/totalRecoveredBdTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Recovered: "
                android:textColor="#C58680"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/totalBdDeathTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Death: "
                android:textColor="#DF4242"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/criticalBdTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Critical: "
                android:textColor="#000"
                android:textSize="20sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/otherCountryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others Country"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/corolaBlogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corona Blog"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
</LinearLayout>